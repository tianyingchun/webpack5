{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Cli",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/scripts/build.ts",
        "info"
      ],
      "env": {
        "TS_NODE_PROJECT": ".vscode/tsconfig.json"
      }
    }
  ]
}